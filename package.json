{
  "name": "polymarket-fact-checker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "convex dev --once --typecheck=disable && npm run dev:client",
    "dev:client": "cd client && npm run dev",
    "dev:convex": "convex dev --typecheck=disable",
    "build": "cd client && npm run build",
    "deploy": "npm run deploy:convex && npm run deploy:vercel",
    "deploy:convex": "convex deploy",
    "deploy:vercel": "cd client && vercel deploy"
  },
  "dependencies": {
    "@polymarket/clob-client": "^5.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "convex": "^1.12.0",
    "typescript": "^5.3.3"
  }
}
